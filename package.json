{
  "name": "full-budget-app",
  "version": "1.0.0",
  "description": "A modular, scalable microservice architecture with best practices of a multi-tenancy SaaS platform for managing transactions, budgets, and reviews using AWS CDK, Lambda, DynamoDB, SQS, and S3.",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "workspaces": [
    "apps/*",
    "infra/*",
    "packages/*"
  ], 
  "repository": {
    "type": "git",
    "url": "git@github.com:debrajpaul/full-budget-app.git"
  },
  "bugs": {
    "url": "https://github.com/debrajpaul/full-budget-app/issues"
  },
  "homepage": "https://github.com/debrajpaul/full-budget-app#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@prisma/client": "^6.10.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "commitlint": "^19.8.1",
    "cross-env": "^10.0.0",
    "esbuild": "^0.23.1",
    "esbuild-ts-paths": "^1.1.3",
    "eslint": "^9.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-config-prettier": "^9.0.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "scripts": {
    "prepare": "husky install",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf apps/*/dist && rimraf packages/*/dist",
    "build": "pnpm clean && node esbuild.config.js",
    "dev": "pnpm clean && node esbuild.config.mjs --watch",
    "synth": "pnpm build && pnpm --filter ./infra cdk:synth",
    "deploy:all": "pnpm build && pnpm --filter ./infra cdk:deploy:all",
    "destroy:all": "pnpm --filter ./infra cdk:destroy:all"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js,jsx}": [
      "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint --config .eslintrc.staged.js --fix --cache",
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "cross-env NODE_OPTIONS=--max_old_space_size=8192 eslint --config .eslintrc.staged.js --fix --cache",
      "prettier --write"
    ],
    "**/*.{md,json}": [
      "prettier --write"
    ]
  }
}
